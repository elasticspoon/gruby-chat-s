<%= form_with(model: message, remote: true) do |form| %>

  <% if message.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(message.errors.count, "error") %>
        prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# form.hidden_field :user_id, :value => message.id %>
  <%# form.hidden_field :room_id, :value => message.id %>
  <%= form.hidden_field :user_id, value: message.user_id %>
  <%= form.hidden_field :chat_room_id, value: message.chat_room_id %>
  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
